<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Frag_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <Spinner
        android:id="@+id/spin_home"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:entries="@array/arr_home"
        android:isScrollContainer="true"
        android:spinnerMode="dialog"/>







        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home01"
            android:visibility="gone"
            android:src="@drawable/home01"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home02"
            android:visibility="gone"
            android:layout_marginTop="40dp"
            android:src="@drawable/home02"
            android:adjustViewBounds="true"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home03"
            android:visibility="gone"
            android:src="@drawable/home03"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home04"
            android:visibility="gone"
            android:src="@drawable/home04"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home05"
            android:visibility="gone"
            android:src="@drawable/home05"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home06"
            android:visibility="gone"
            android:src="@drawable/home06"
            android:layout_marginTop="40dp"
            android:adjustViewBounds="true"
            />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>